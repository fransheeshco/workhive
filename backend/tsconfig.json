{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./source",          // take input from source
    "outDir": "./dist",             // emit compiled JS here

    /* Environment Settings */
    "module": "NodeNext",           // needed for ESM in Node
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,

    /* Node type definitions */
    "types": ["node"],              // ensures Node globals are typed
                                    // make sure to: npm i -D @types/node

    /* Other Outputs */
    "sourceMap": true,              // useful for debugging
    "declaration": true,            // generate .d.ts files
    "declarationMap": true,

    /* Stricter Typechecking */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    /* Recommended Options */
    "strict": true,
    "skipLibCheck": true,

    /* Compatibility */
    "isolatedModules": false,       // needed for ts-node/esm loader
    "noUncheckedSideEffectImports": false
  },
  "include": ["source"],            // only compile your source folder
  "exclude": ["node_modules", "dist"]
}
